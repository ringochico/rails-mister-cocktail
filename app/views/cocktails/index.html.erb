<div class="banner">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <h5>Find your mix</h4>
    <a class="btn btn-success btn-lg" href="/cocktails/new">Create a cocktail! </a>
  </div>
</div>



<div class="container">
  <h1 style="text-align: center;">Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, width: 400, height: 500, crop: :fill %>');">
          <div class="card-category"></div>
           <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
       <% end %>
